{
  "name": "ekosim-unified",
  "version": "1.0.0",
  "description": "Unified development environment for EkoSim",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "cd api && node server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start:prod": "cd api && NODE_ENV=production node server.js",
    "start": "npm run dev",
    "test:proxy": "node test-proxy.js",
    "build:start": "npm run build && npm run start:prod"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}